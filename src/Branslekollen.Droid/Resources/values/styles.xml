<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="MyCustomTheme.Splash" parent ="android:Theme.Material.Light.NoActionBar">
    <item name="android:windowBackground">@color/my_primary</item>
    <item name="android:textColor">@color/my_white</item>
  </style>
  <style name="MyCustomTheme.NoConnection" parent ="android:Theme.Material.Light">
    <item name="android:windowBackground">@drawable/no_connection_background</item>
    <item name="android:windowNoTitle">true</item>
  </style>
  <style name="MyCustomTheme.NoActionBar" parent="android:Theme.Material.Light.NoActionBar">
    <item name="android:colorPrimary">@color/my_primary</item>
    <item name="android:colorAccent">@color/my_accent</item>
  </style>
  <style name="BranslekollenTheme" parent="android:Theme.Material.Light.DarkActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:colorPrimary">@color/my_primary</item>
    <item name="android:colorPrimaryDark">@color/my_primary_dark</item>
    <item name="android:colorAccent">@color/my_accent</item>
    <!--<item name="android:textColorPrimary">@color/my_white</item>-->
  </style>
</resources>